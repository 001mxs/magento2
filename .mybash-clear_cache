#!/bin/bash
echo '------------------------------------------'
echo '--- magento clear cache & static files ---'
echo '------------------------------------------'
echo ''
echo '--- cache-start status -------------------'
bin/magento cache:status
echo ''
echo '--- cache clean --------------------------'
bin/magento cache:clean
echo '------------------------------------------'
echo 'done!'
echo ''
echo '--- cache-end status ---------------------'
bin/magento cache:status
echo ''
echo 'done!'
